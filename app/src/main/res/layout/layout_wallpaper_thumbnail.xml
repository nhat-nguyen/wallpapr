<?xml version="1.0" encoding="utf-8"?>
<app:android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        app:cardElevation="2dp">

    <ImageView
        android:id="@+id/iv_wallpaper"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:adjustViewBounds="true"
        android:src="@drawable/wallpaper"/>

    <LinearLayout
        android:id="@+id/ll_wallpaper_caption"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#000000"
        android:layout_marginTop="180dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_wallpaper_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            style="@style/Base.TextAppearance.AppCompat.Title.Inverse"/>

        <TextView
            android:id="@+id/tv_wallpaper_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            style="@style/Base.TextAppearance.AppCompat.Inverse"/>
    </LinearLayout>

</app:android.support.v7.widget.CardView>